{
  "name": "Documentation",
  "version": "1.0.0",
  "files": [
    { "path": "theme.json", "type": "manifest" },
    { "path": "base.hbs", "type": "base" },
    { "path": "variables.css", "type": "stylesheet" },
    { "path": "partials/head.hbs", "type": "partial", "name": "head" },
    { "path": "partials/header.hbs", "type": "partial", "name": "header" },
    { "path": "partials/sidebar.hbs", "type": "partial", "name": "sidebar" },
    { "path": "partials/footer.hbs", "type": "partial", "name": "footer" }
  ],
  "appearanceSchema": {
    "description": "Customise the colors, fonts and layout of your site.",
    "type": "object",
    "properties": {
      "color_background": {
        "type": "string",
        "title": "Page background",
        "format": "color",
        "default": "#ffffff"
      },
      "color_text": {
        "type": "string",
        "title": "Body text",
        "format": "color",
        "default": "#333333"
      },
      "color_headings": {
        "type": "string",
        "title": "Headings",
        "format": "color",
        "default": "#111111"
      },
      "color_primary": {
        "type": "string",
        "title": "Primary accent",
        "format": "color",
        "default": "#3b82f6"
      },
      "color_border": {
        "type": "string",
        "title": "Borders",
        "format": "color",
        "default": "#e5e5e5"
      },
      "color_sidebar": {
        "type": "string",
        "title": "Sidebar background",
        "format": "color",
        "default": "#fff"
      },
      "font_headings": {
        "type": "string",
        "title": "Headings font",
        "description": "Choose the font for all headings.",
        "enum": [
          "Geist",
          "Geist Mono",
          "Gentium Book Plus",
          "IBM Plex Mono",
          "IBM Plex Sans",
          "IBM Plex Serif",
          "Instrument Serif",
          "Inter"
        ],
        "enumNames": [
          "Geist (Sans)",
          "Geist Mono (Monospace)",
          "Gentium Book Plus (Serif)",
          "IBM Plex Mono (Monospace)",
          "IBM Plex Sans (Sans)",
          "IBM Plex Serif (Serif)",
          "Instrument Serif (Serif)",
          "Inter (Sans)"
        ],
        "default": "Inter"
      },
      "font_text": {
        "type": "string",
        "title": "Body text font",
        "description": "Choose the font for all paragraphs and lists.",
        "enum": [
          "Geist",
          "Geist Mono",
          "Gentium Book Plus",
          "IBM Plex Mono",
          "IBM Plex Sans",
          "IBM Plex Serif",
          "Instrument Serif",
          "Inter"
        ],
        "enumNames": [
          "Geist (Sans)",
          "Geist Mono (Monospace)",
          "Gentium Book Plus (Serif)",
          "IBM Plex Mono (Monospace)",
          "IBM Plex Sans (Sans)",
          "IBM Plex Serif (Serif)",
          "Instrument Serif (Serif)",
          "Inter (Sans)"
        ],
        "default": "IBM Plex Sans"
      },
      "sidebar_width": {
        "type": "string",
        "title": "Sidebar width",
        "description": "Choose the width of the navigation sidebar.",
        "enum": ["240px", "280px", "320px"],
        "enumNames": ["Narrow (240px)", "Medium (280px)", "Wide (320px)"],
        "default": "280px"
      }
    }
  },
  "themeDataSchema": {
    "type": "object",
    "properties": {
      "header_content": {
        "type": "string",
        "title": "Header content",
        "description": "Optional HTML content for the header bar",
        "format": "textarea",
        "default": ""
      },
      "footer_content": {
        "type": "string",
        "title": "Footer content",
        "description": "Optional HTML content for the footer",
        "format": "textarea",
        "default": "Â© 2024 Documentation Site"
      }
    }
  }
