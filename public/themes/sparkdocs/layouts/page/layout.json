{
  "name": "Page",
  "version": "1.0.0",
  "description": "A clean, single-column layout for standard pages like 'About Us'.",
  "layoutType": "page",
  "parentLayout": "base",
  "files": [
    { "path": "layout.json", "type": "manifest" },
    { "path": "index.hbs", "type": "template" }
  ],

  "schema": {
    "title": "Page Settings",
    "type": "object",
    "properties": {
      "showToc": {
        "type": "boolean",
        "title": "Show table of contents",
        "description": "Display a sticky table of contents on the right side of the page",
        "default": true
      }
    }
  },

  "image_presets": {
    "banner_image": {
      "width": 1200,
      "height": 360,
      "crop": "scale"
    },
    "featured_image": {
      "width": 800,
      "height": 600,
      "crop": "scale"
    }
  }
}