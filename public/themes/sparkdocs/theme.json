{
  "name": "Sparkdocs",
  "version": "2.0.0",
  "files": [
    { "path": "theme.json", "type": "manifest" },
    { "path": "base.hbs", "type": "base" },
    { "path": "styles.css", "type": "stylesheet" },
    { "path": "partials/head.hbs", "type": "partial", "name": "head" },
    { "path": "partials/header.hbs", "type": "partial", "name": "header" },
    { "path": "partials/sidebar.hbs", "type": "partial", "name": "sidebar" },
    { "path": "partials/footer.hbs", "type": "partial", "name": "footer" }
  ],
  "stylesheets": [
    { "path": "styles.css", "type": "main" }
  ],
  "layouts": ["page", "blog-post", "hero-page", "list-view"],
  "appearanceSchema": {
    "description": "Customise the colors, fonts and layout of your site.",
    "type": "object",
    "properties": {
      "--color-background": {
        "type": "string",
        "title": "Page background",
        "format": "color",
        "default": "#ffffff"
      },
      "--color-text": {
        "type": "string",
        "title": "Body text",
        "format": "color",
        "default": "#1f2937"
      },
      "--color-heading": {
        "type": "string",
        "title": "Headings",
        "format": "color",
        "default": "#111827"
      },
      "--color-primary": {
        "type": "string",
        "title": "Primary accent",
        "format": "color",
        "default": "#3b82f6"
      },
      "--color-border": {
        "type": "string",
        "title": "Borders",
        "format": "color",
        "default": "#e5e7eb"
      },
      "--color-sidebar": {
        "type": "string",
        "title": "Sidebar background",
        "format": "color",
        "default": "#ffffff"
      },
      "--font-display": {
        "type": "string",
        "title": "Headings style",
        "description": "Choose the font family for all headlines.",
        "enum": [
          "Geist, system-ui, sans-serif",
          "\"Geist Mono\", monospace",
          "\"Gentium Book Plus\", Georgia, serif",
          "\"IBM Plex Mono\", monospace",
          "\"IBM Plex Sans\", sans-serif",
          "\"IBM Plex Serif\", serif",
          "\"Instrument Serif\", serif",
          "Inter, system-ui, sans-serif"
        ],
        "enumNames": [
          "Geist (Sans)",
          "Geist Mono (Monospace)",
          "Gentium Book Plus (Serif)",
          "IBM Plex Mono (Monospace)",
          "IBM Plex Sans (Sans)",
          "IBM Plex Serif (Serif)",
          "Instrument Serif (Serif)",
          "Inter (Sans)"
        ],
        "default": "Inter, system-ui, sans-serif"
      },

      "--font-body": {
        "type": "string",
        "title": "Body text style",
        "description": "Choose the font family for all paragraphs and lists.",
        "enum": [
          "Geist, system-ui, sans-serif",
          "\"Geist Mono\", monospace",
          "\"Gentium Book Plus\", Georgia, serif",
          "\"IBM Plex Mono\", monospace",
          "\"IBM Plex Sans\", sans-serif",
          "\"IBM Plex Serif\", serif",
          "\"Instrument Serif\", serif",
          "Inter, system-ui, sans-serif"
        ],
        "enumNames": [
          "Geist (Sans)",
          "Geist Mono (Monospace)",
          "Gentium Book Plus (Serif)",
          "IBM Plex Mono (Monospace)",
          "IBM Plex Sans (Sans)",
          "IBM Plex Serif (Serif)",
          "Instrument Serif (Serif)",
          "Inter (Sans)"
        ],
        "default": "\"Gentium Book Plus\", Georgia, serif"
      },
      "--sidebar-width": {
        "type": "string",
        "title": "Sidebar width",
        "description": "Choose the width of the navigation sidebar.",
        "enum": ["240px", "280px", "320px"],
        "enumNames": ["Narrow (240px)", "Medium (280px)", "Wide (320px)"],
        "default": "280px"
      }
    }
  },
  "themeDataSchema": {
    "type": "object",
    "properties": {
      "header_content": {
        "type": "string",
        "title": "Header content",
        "description": "Optional HTML content for the header area",
        "format": "textarea",
        "default": ""
      },
      "github_link": {
        "type": "string",
        "title": "Github link",
        "description": "Link to a Github repository.",
        "format": "textfield",
        "default": ""
      },
      "discord_link": {
        "type": "string",
        "title": "Discord link",
        "description": "Link to a Discord server.",
        "format": "textfield",
        "default": ""
      },
      "xtwitter_link": {
        "type": "string",
        "title": "X/Twitter link",
        "description": "Link to a X/Twitter profile.",
        "format": "textfield",
        "default": ""
      },
      "bluesky_link": {
        "type": "string",
        "title": "Bluesky link",
        "description": "Link to a Bluesky profile.",
        "format": "textfield",
        "default": ""
      },
       "web_link": {
        "type": "string",
        "title": "Web link",
        "description": "Link to a Web address.",
        "format": "textfield",
        "default": ""
      },
      "footer_content": {
        "type": "string",
        "title": "Footer content",
        "description": "Optional HTML content for the footer",
        "format": "textarea",
        "default": ""
      }
    }
  }
}