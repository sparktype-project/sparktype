{{!-- Sidebar Navigation --}}
<nav class="fixed left-0 top-0 bottom-0 w-64 bg-white border-r border-border overflow-y-auto z-50 transform transition-transform duration-300 ease-in-out md:translate-x-0"
     :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'">

  {{!-- Logo & Close Button --}}
  <div class="flex items-center justify-between p-6 border-b border-border">
    {{!-- Logo (desktop) --}}
    <a href="{{#if @root.options.isExport}}/index.html{{else}}/{{/if}}" class="hidden md:flex items-center space-x-2 font-bold text-lg text-heading transition-colors">
      {{#if @root.headContext.logoUrl}}
        <img src="{{@root.headContext.logoUrl}}" alt="{{@root.manifest.title}} logo" class="h-7 w-auto">
      {{/if}}
      <span>{{@root.manifest.title}}</span>
    </a>

    {{!-- Mobile: Menu title + Close button --}}
    <div class="md:hidden flex items-center justify-between w-full">
      <span class="font-semibold text-heading">Menu</span>
      <button @click="sidebarOpen = false"
              class="p-2 text-muted hover:text-heading transition-colors"
              aria-label="Close navigation">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>

  {{!-- Navigation Links --}}
  <div class="p-4 space-y-1">
    {{#each navLinks}}
      {{#if this.children}}
        {{!-- Section with children --}}
        <div class="mb-2">
          <button @click="toggleSection('{{@index}}')"
                  class="w-full flex items-center justify-between py-2 px-3 text-sm font-medium text-heading rounded-lg hover:bg-gray-50 transition-colors">
            <span>{{this.label}}</span>
            <svg class="w-4 h-4 transition-transform duration-200"
                 :class="expandedSections.includes('{{@index}}') ? 'rotate-90' : ''"
                 fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
          </button>

          {{!-- Children --}}
          <div class="ml-3 mt-1 space-y-1 border-l-2 border-gray-200 pl-3"
               x-show="expandedSections.includes('{{@index}}')"
               x-transition:enter="transition ease-out duration-200"
               x-transition:enter-start="opacity-0 -translate-y-1"
               x-transition:enter-end="opacity-100 translate-y-0"
               x-transition:leave="transition ease-in duration-150"
               x-transition:leave-start="opacity-100 translate-y-0"
               x-transition:leave-end="opacity-0 -translate-y-1">
            {{#each this.children}}
              <a href="{{this.href}}"
                 class="block py-2 px-3 text-sm text-text no-underline rounded-lg hover:bg-gray-50 hover:text-heading transition-colors"
                 :class="isActive('{{this.href}}') ? 'bg-blue-50 text-blue-600 font-medium' : ''"
                 @click="sidebarOpen = false">
                {{this.label}}
              </a>
            {{/each}}
          </div>
        </div>
      {{else}}
        {{!-- Single item without children --}}
        <a href="{{this.href}}"
           class="block py-2 px-3 text-sm font-medium text-heading no-underline rounded-lg hover:bg-gray-50 transition-colors"
           :class="isActive('{{this.href}}') ? 'bg-blue-50 text-blue-600' : ''"
           @click="sidebarOpen = false">
          {{this.label}}
        </a>
      {{/if}}
    {{/each}}
  </div>
</nav>