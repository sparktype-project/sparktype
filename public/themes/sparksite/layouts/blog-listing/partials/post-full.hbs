{{!
  Partial for displaying a full blog post with complete content.
  'this' refers to one item from the `collectionItems` array.
}}
<article class="border-b last:border-b-0 last:pb-0 last:mb-0">
    {{#if this.frontmatter.featured_image}}
        <div class="mb-8">
            {{{image
                fieldname="featured_image"
                preset="full"
                alt=this.frontmatter.title
                class="w-full h-64 md:h-80 object-cover rounded-lg"
            }}}
        </div>
    {{/if}}
    

    <header class="mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-heading my-4 leading-tight">
            <a
                href="{{this.url}}"
                class="hover:text-primary transition-colors duration-200"
            >
                {{this.frontmatter.title}}
            </a>
        </h2>
        
        <div class="flex flex-wrap items-center gap-4 text-sm text-muted mb-6">
            <time datetime="{{this.frontmatter.date}}" class="font-medium">
                {{formatDate this.frontmatter.date}}
            </time>
            
            {{#if this.frontmatter.author}}
                <span class="flex items-center gap-1">
                    <span>by</span>
                    <span class="font-medium text-text">{{this.frontmatter.author}}</span>
                </span>
            {{/if}}
            
           
        </div>

        {{#if this.frontmatter.excerpt}}
            <div class="text-lg text-muted leading-relaxed mb-6 p-4 bg-muted/30 rounded-lg border-l-4 border-primary">
                {{this.frontmatter.excerpt}}
            </div>
        {{/if}}
    </header>
    

    {{#if this.content}}
        <div class="prose max-w-none">
            {{{markdown this.content}}}
        </div>
    {{else}}
        <div class="text-muted italic">
            No content available for this post.
        </div>
    {{/if}}

    <footer class="mt-4 pt-4">
         {{#if this.resolvedTags}}
                <div class="flex flex-wrap gap-2">
                    {{#each this.resolvedTags}}
                        {{#each this}}
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-muted text-muted-foreground">
                                {{this.name}}
                            </span>
                        {{/each}}
                    {{/each}}
                </div>
            {{/if}}
    </footer>
</article>