{{!
  Partial for a single blog post card using SparkType Design System utilities.
  'this' refers to one item from the `collectionItems` array.
}}
<article class="border-b border-gray-200 pb-12 mb-12">
    {{#if this.frontmatter.featured_image}}
        <a href="{{this.url}}" class="block mb-4">
            {{{image
                fieldname="featured_image"
                alt=this.frontmatter.title
                class="w-full"
            }}}
        </a>
    {{/if}}

    <div class="flex flex-col h-full">
        <h2 class="mt-0 mb-2 leading-tight">
            <a
                href="{{this.url}}"
                class=""
            >
                {{this.frontmatter.title}}
            </a>
        </h2>

        <p class="text-sm text-muted mb-3 font-medium">
            {{formatDate this.frontmatter.date}}
        </p>

        {{#if this.frontmatter.excerpt}}
            <p class="text-text mb-4 leading-relaxed flex-1">
                {{this.frontmatter.excerpt}}
            </p>
        {{/if}}

        <a
            href="{{this.url}}"
            class="inline-flex items-center text-primary font-medium hover:underline transition-colors duration-200 mt-auto"
        >
            Read More
            <span class="ml-1">â†’</span>
        </a>
    </div>
</article>