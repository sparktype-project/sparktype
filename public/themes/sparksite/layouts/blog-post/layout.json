{
  "name": "Blog post",
  "version": "1.0.0",
  "description": "The standard layout for an individual blog post article.",
  "layoutType": "single",
  "templateType": "item",
  "parentLayout": "base",
  "files": [
    { "path": "layout.json", "type": "manifest" },
    { "path": "index.hbs", "type": "template" }
  ],
  "schema": {
    "title": "Blog Post Fields",
    "type": "object",
    "properties": {
      "author": {
        "type": "string",
        "title": "Author Name"
      },
      "excerpt": {
        "type": "string",
        "title": "Excerpt",
        "description": "A short summary of the post, used in listings and social media previews."
      },
      "tags": {
        "type": "array",
        "title": "Tags",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "uiSchema": {
    "excerpt": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 4
      }
    }
  }
}