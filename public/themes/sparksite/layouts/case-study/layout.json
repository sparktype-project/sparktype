{
  "name": "Case study",
  "version": "1.0.0",
  "description": "A case study layout for portfolios.",
  "layoutType": "item",
  "parentLayout": "base",
  "files": [
    { "path": "layout.json", "type": "manifest" },
    { "path": "index.hbs", "type": "template" },
    { "path": "partials/card.hbs", "type": "partial" },
    { "path": "partials/full.hbs", "type": "partial" },
    { "path": "partials/project-card.hbs", "type": "partial" }
  ],
  "partials": [
    {
      "path": "partials/card.hbs",
      "name": "Card View",
      "description": "Compact cards with title, excerpt, and read more links",
      "isDefault": true
    },
    {
      "path": "partials/full.hbs",
      "name": "Full content",
      "description": "Complete project details with full content displayed"
    },
    {
      "path": "partials/project-card.hbs",
      "name": "Project Card",
      "description": "Grid-style project cards for portfolio displays"
    }
  ],
  "schema": {
    "title": "Portfolio Project Fields",
    "type": "object",
    "properties": {
      "client": {
        "type": "string",
        "title": "Client Name"
      },
      "project_url": {
        "type": "string",
        "format": "uri",
        "title": "Live Project URL"
      },
      "technologies": {
        "type": "array",
        "title": "Technologies Used",
        "items": { "type": "string" }
      },
      "gallery": {
        "type": "array",
        "title": "Image Gallery",
        "items": {
          "type": "string",
          "title": "Gallery Image"
        }
      }
    }
  },
  "uiSchema": {
    "gallery": {
      "items": {
        "ui:widget": "imageUploader"
      }
    }
  }
}