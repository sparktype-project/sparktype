{
  "name": "Blog post",
  "version": "1.0.0",
  "description": "The standard layout for an individual blog post article.",
  "layoutType": "single",
  "files": [
    { "path": "layout.json", "type": "manifest" },
    { "path": "index.hbs", "type": "template" }
  ],
  "schema": {
    "title": "Blog Post Fields",
    "type": "object",
    "properties": {
      "author": {
        "type": "string",
        "title": "Author Name"
      },
      "excerpt": {
        "type": "string",
        "title": "Excerpt",
        "description": "A short summary of the post, used in listings and social media previews."
      },
      "tags": {
        "type": "array",
        "title": "Tags",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "preset_overrides": {
    "banner": {
      "width": 900,
      "height": 300,
      "crop": "fill",
      "gravity": "center",
      "description": "Blog post banner image"
    },
     "featured": {
      "width": 1200,
      "height": 400,
      "crop": "fill",
      "gravity": "center",
      "description": "Blog post featured image"
    }
  },
  "uiSchema": {
    "excerpt": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 4
      }
    }
  }
}